{
  "description": "Adds a time tracking button to Gitlab's issue interface",
  "manifest_version": 2,
  "name": "gitlab-time-tracking-button",
  "version": "1.0",

  "icons": {
    "64": "icons/logo-64.png"
  },

  "browser_action": {
    "browser_style": true,

    "default_icon": {
      "64": "icons/logo-64.png"
    }
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "webRequest",
    "https://gitlab.com/*"
  ],

  "optional_permissions": [
    "https://*/"
  ]
}
